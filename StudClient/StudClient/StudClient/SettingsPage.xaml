<Page x:Class="StudClient.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="500"
      ShowsNavigationUI="False"
      WindowWidth="500"
      WindowHeight="300"
      VerticalAlignment="Stretch"
      HorizontalAlignment="Stretch"
	Title="Settings">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="#FFBFD7EC" Offset="0"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="Back" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10,10,10,10" Width="120" Height="30" Content="Назад" Click="Back_Click"/>
    </Grid>
</Page>
