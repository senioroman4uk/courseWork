<Window x:Class="InstrClient.FileControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddEventWindow" Height="350" Width="400" MinWidth="400" MinHeight="350" MaxWidth="400" MaxHeight="350">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="#FFBFD7EC" Offset="0"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <DataGrid x:Name="FilesGrid" Width="360" Height="260" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0"/>
        <Button x:Name="AddFile" Content="Додати файл" Width="120" Height="26" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,0,0,10" Click="AddFile_Click"/>
        <Button x:Name="DeleteFile" Content="Видалити файл" Width="120" Height="26" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,10" Click="DeleteFile_Click"/>
    </Grid>
</Window>
